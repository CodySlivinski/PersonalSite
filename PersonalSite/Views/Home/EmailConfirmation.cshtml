@{
    ViewData["Title"] = "Email Confirmation";
}

@model PersonalSite.Models.ContactViewModel 

<main id="main">

    <!-- ======= Confirmation Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="row">

                <div class="col-lg-12">

                    <div class="info-box">
                        <i class="bx bx-check-circle"></i>
                        <h3>Message Sent!</h3>
                        @*
                        When referring to a SPECIFIC OBJECT passed to this View (like the cvm object we passed),
                        use a capital M -- "Model".
                        *@
                        <p>
                            Thank you for contacting Me! I will respond to your message using
                            the provided email address, @Model.Email, in the up coming days.
                        </p>

                        <br />

                        <div class="offset-3 col-md-6 text-center">
                            <p>
                                You sent the following message on
                                @DateTime.Now.Date.ToShortDateString() at
                                @DateTime.Now.ToShortTimeString() :
                            </p>
                        </div>

                        <br />

                        <div class="offset-3 col-md-6">
                            <p>
                                <em>@Model.Message</em>
                            </p>
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </section><!-- End Confirmation Section -->

</main><!-- End #main -->
